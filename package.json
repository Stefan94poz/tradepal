{
  "name": "tradepal",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:up": "cd apps/api/docker && docker compose up -d",
    "docker:down": "cd apps/api/docker && docker compose down",
    "docker:logs": "cd apps/api/docker && docker compose logs -f",
    "docker:build": "cd apps/api/docker && docker compose build",
    "docker:clean": "cd apps/api/docker && docker compose down -v",
    "docker:restart": "cd apps/api/docker && docker compose restart",
    "docker:status": "cd apps/api/docker && docker compose ps"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.4.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
